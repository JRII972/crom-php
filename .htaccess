    RewriteEngine On RewriteBase /api/ RewriteCond %{REQUEST_FILENAME} !-f RewriteCond %{REQUEST_FILENAME} !-d RewriteRule ^(.*)$ index.php [QSA,L] Header set Access-Control-Allow-Origin "http://localhost:3000" Header set Access-Control-Allow-Methods "POST" Header set Access-Control-Allow-Headers "Content-Type, X-CSRF-Token" Header set Access-Control-Allow-Credentials "true"